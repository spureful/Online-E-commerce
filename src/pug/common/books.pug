                    .books__price #{booksItem.price}
    ul.books__paggination
        li.books__paggination-item
            a.books__paggination-link(href="#") 1
        li.books__paggination-item
            a.books__paggination-link(href="#") 2
        li.books__paggination-item.active
            a.books__paggination-link(href="#") 3
        li.books__paggination-item
            a.books__paggination-link(href="#") 4
        li.books__paggination-item
            a.books__paggination-link(href="#") 5
        li.books__paggination-item
            a.books__paggination-link(href="#") 6